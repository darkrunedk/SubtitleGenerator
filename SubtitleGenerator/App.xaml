<Application x:Class="SubtitleGenerator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SubtitleGenerator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="DefaultTextBoxStyle" TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style x:Key="TimeEntryTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}">
            <Setter Property="Margin" Value="10,220,10,0" />
        </Style>
         
    </Application.Resources>
</Application>
